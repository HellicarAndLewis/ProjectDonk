<!-- here goes the list of all the parameters that should be accessible
     and configurable per mode. All the modes should be listed in the 
	 <parameters> tag, their values will be stored in a separate xml file.
	 -->
<parameters>
	<mode name="buzz"></mode>
	<mode name="inspiration"></mode>
	<mode name="interview"></mode>
	<mode name="vote"></mode>
	<mode name="performance"></mode>
    <parameter name="Top BG Red" defaultValue="0" minValue="0" maxValue="255"></parameter>
    <parameter name="Top BG Green" defaultValue="0" minValue="0" maxValue="255"></parameter>
    <parameter name="Top BG Blue" defaultValue="0" minValue="0" maxValue="255"></parameter>
	<parameter name="Bottom BG Red" defaultValue="0" minValue="0" maxValue="255"></parameter>
    <parameter name="Bottom BG Green" defaultValue="0" minValue="0" maxValue="255"></parameter>
    <parameter name="Bottom BG Blue" defaultValue="0" minValue="0" maxValue="255"></parameter>
	<parameter name="Particle Red" defaultValue="0" minValue="0" maxValue="255"></parameter>
	<parameter name="Particle Blue" defaultValue="0" minValue="0" maxValue="255"></parameter>
	<parameter name="Particle Green" defaultValue="0" minValue="0" maxValue="255"></parameter>
	<parameter name="Noise Speed" defaultValue="0.002" minValue="0.0" maxValue="1.0"></parameter>
	<parameter name="Noise Scale" defaultValue="200" minValue="0.0" maxValue="1000.0"></parameter>
	<parameter name="Noise Damp" defaultValue="0.5" minValue="0.0" maxValue="1.0"></parameter>
	<parameter name="Max Bubble Size" defaultValue="20" minValue="10" maxValue="200.0"></parameter>
	<parameter name="Max Particle Size" defaultValue="0" minValue="0" maxValue="96.0"></parameter>
	<parameter name="Gradient Centre" defaultValue="0" minValue="0" maxValue="1"></parameter>
	<parameter name="light x" defaultValue="0" minValue="-10" maxValue="10"></parameter>
    <parameter name="light y" defaultValue="0" minValue="-10" maxValue="10"></parameter>
    <parameter name="light z" defaultValue="0" minValue="-10" maxValue="10"></parameter>
	<parameter name="Background Audio-reactiveness" defaultValue="0" minValue="0" maxValue="1"></parameter>
</parameters>
